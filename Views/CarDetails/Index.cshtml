@model IEnumerable<CarRental_WP.Models.CarsModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Vehicle No
        </th>
        <th>
                    Car Model
        </th>
        <th>
            Seating Capacity
        </th>
        <th>
            Rent Per Day
        </th>
        <th>
           Booked Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeatingCap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentPerDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BkdStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id  })
        </td>
    </tr>
}

</table>
